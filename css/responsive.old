

@media screen and (max-width: 599px) {

  /* Menu styling*/
    nav {
      order: 2;
      margin: 10px 45px 0 40px;
    }

    .navi {
      flex-flow: column;
      padding: 0;
    }

    .navi a {
      text-align: center;
      padding: 15px;
      border-top: 1px solid rgba(255,255,255,0.3);
      border-bottom: 1px solid rgba(0,0,0,0.1);
      font-size: 24px;
    }

    .navi li:last-of-type a {
      border-bottom: none;
    }

    /*video {
      display: none;
    }*/

  /* Style name and Desc*/
    .whoami {
      order: 1;
      position: relative;
      margin: 0 0 0 10px;
    }

  /* Style logo*/
    .header-logo {
      margin: 0 0 0 10px;
      order: 0;
    }

  /* Style image buttons */
   .pic {
    width: 40vw;
    margin: 10px;
   }

   .blksz:hover,
   .blksz {
    transition: none !important;
    transform: none !important;
   }

   .picdesc {
    line-height: normal;
   }

  /* Copyright styling*/
   .copy {
    font-size: 4vw;
   }
}


@media screen and (min-width: 600px) {

    nav {
      order: 2;
      margin: auto;
    }

    .navi a,
    .navi a:hover {
      text-align: center;
      border-top: 1px solid rgba(255,255,255,0.3);
      border-bottom: 1px solid rgba(0,0,0,0.1);
      font-size: 20px;
      transition: none !important;
      transform: none !important;
    }

    .whoami {
      order: 1;
      margin: auto;
      padding: 45px 0 0 95px;
    }

    .header-logo {
      margin: 30px 0 0 40px;
      order: 0;
    }

   .pic {
    width: 40vw;
    margin: 10px;
   }

   .blksz:hover,
   .blksz {
    transition: none !important;
    transform: none !important;
   }

   .picdesc {
    line-height: normal;
   }

   .copy {
    font-size: 4vw;
   }
}


@media screen and (min-width: 900px) {

    header {
      justify-content: space-between;
      padding: 0;
    }
    nav {
      order: 2;
      margin: 55px 0 0 0;
      padding: 30px 10px 0 20px;
    }

    .navi a,
    .navi a:hover {
      text-align: center;
      border: 0;
      font-size: 20px;
      transition: none !important;
      transform: none !important;
    }

    .whoami {
      order: 2;
      padding: 53px 0 0 0;
      margin: auto;
    }

    .header-logo {
      margin: 0;
      order: 0;
      padding: 15px 0 0;
    }

    .tlogo {
      margin: 15px;

    }

   .pic {
    width: 40vw;
    margin: 10px;
   }

   .blksz:hover,
   .blksz {
    transition: none !important;
    transform: none !important;
   }

   .picdesc {
    line-height: normal;
   }

   .copy {
    font-size: 2vw;
   }
}


@media screen and (min-width: 1200px) {
    header {
      justify-content: center;
      padding: 0 130px 30px;
    }

    nav {
      order: 2;
    }

    .navi {
      padding: 0;
      margin-bottom: 0;
    }

    .navi a {
      text-align: center;
      padding:15px;
      border-top: 1px solid rgba(255,255,255,0.3);
      border-bottom: 1px solid rgba(0,0,0,0.1);
      font-size: 20px;
    }

    .navi li:last-of-type a {
      border-bottom: none;
    }

    .whoami {
      order: 3;
    }

    .myname {
      font-size: 18px;
    }

    .header-logo {
     margin: 0 40px 0 0px;
     order: 0;
    }

    .tlogo {
     margin: 15px 40px 20px 0
    }

    .nav2 {
     display: flex;
     margin: auto;
     justify-content: center;
     flex-wrap: wrap;
     background-color: #154360;
     padding: 30px;
    }

    .pic {
     margin: 20px;
     border: 10px solid white;
    }

.blksz {
  position: relative;
  transition: all .2s ease-in-out;
}

.blksz:hover {
  transform: rotate(5deg) scale(1.1);
}

.picdesc {
  position: initial;
  color: white;
  font-style: italic;
  padding: 20px 0 0 0;
  margin: 0;
  text-align: center;
  line-height: 2px;
}

   .copy {
    font-size: 2vw;
   }
}


